@model BethanysPieShop.ViewModels.PieListViewModel 
@* this is what comes in to the View from the Controller - a list of pies that we iterate over *@
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width"/>
        <title>Bethany's Pie Shop</title>
    </head>
    <body>
    <h1>@Model.CurrentCategory</h1>
    @foreach (var pie in Model.Pies)
    {
        <div>
            <h2>@pie.Name</h2>
            <h3>@pie.Price.ToString("c")</h3>
            <h4>@pie.Category.CategoryName</h4>
        </div>
    }
    </body>
</html>